<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GarupaPico"
             x:Class="GarupaPico.MainPage">

    <StackLayout>

        <!-- Place new controls here -->
        <!-- Title -->
        <Label Text="バンドリ！ガールズバンドパーティ！" 
           HorizontalOptions="Center" />
        <Label Text="モバイルステーシヨン" 
           HorizontalOptions="Center"
           VerticalOptions="StartAndExpand" />
        
        <!-- Select Tool here, have more than one -->
        <Button Text="ガルパ - バンド総合力ツール"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="OnLaunchCalTool"
                Image="calculator-graphic.png"
                ContentLayout="Top, 15" />
        
        <Button Text="ガルパ - イベントトップ情報"
                HorizontalOptions="Center"
                Clicked="OnLaunchCalTool" />
        <!-- Clicked Deck & Song Score Tool -->

    </StackLayout>

</ContentPage>
